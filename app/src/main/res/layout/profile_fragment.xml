<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/padding12"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ph.com.jeffreyvcabrera.stlukesdev.utils.ImageViewRounded
            android:layout_marginTop="@dimen/padding50"
            android:layout_marginBottom="@dimen/padding50"
            android:id="@+id/doctorImage"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView
            android:gravity="center"
            android:layout_margin="@dimen/fab_margin"
            android:text="Firstname Lastname"
            android:textSize="@dimen/heading_font"
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="@dimen/fab_margin"
            android:gravity="center"
            android:textSize="@dimen/heading_font"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="@dimen/fab_margin"
            android:gravity="center"
            android:textSize="@dimen/heading_font"
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="@dimen/fab_margin"
            android:gravity="center"
            android:textSize="@dimen/heading_font"
            android:id="@+id/role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
